<%= content_tag :div, class: 'col-sm-4 mt-4' do %>
  <%= content_tag :div, class: 'card bg-light' do %>
    <%= content_tag :div, class: 'card-body' do %>
      <%= content_tag :h5, author.display_name, class: 'card-title' %>
      <%= content_tag :h6, "Date of birth: #{author.date_of_birth}", class: 'card-subtitle mb-2 text-muted' %>
      <%= content_tag :p, "Book Count: #{author.books.count}" %>
      <%= content_tag :p do %>
        <%= link_to author do %>
          <%= fa_stacked_icon "link", base: "square-o" %>
        <% end %>
        <%= link_to edit_author_path(author) do %>
          <%= fa_stacked_icon "edit", base: "square-o" %>
        <% end %>
        <%= link_to author, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <%= fa_stacked_icon "trash", base: "square-o" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
