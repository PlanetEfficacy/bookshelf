<%= content_tag :div, class: 'container' do %>
  <%= content_tag :h1, 'Log in', class: 'display-4' %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= content_tag :div, class: 'form-group' do %>
      <%= f.label :label, 'Email:' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
      <%= f.label :label, 'Password:' %>
      <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
    <% end %>

    <% if devise_mapping.rememberable? %>
      <%= content_tag :div, class: 'form-group' do %>
        <%= f.check_box :remember_me, id: :remember_me %>
        <%= f.label :remember_me, class: 'form-check-label', for: 'remember_me' %>
      <% end %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
      <%= f.submit 'Log in', class: 'btn btn-outline-primary' %>
    <% end %>
  <% end %>
  <%= render "devise/shared/links" %>
<% end %>
