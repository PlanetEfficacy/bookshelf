<%= form_with(model: review, local: true) do |form| %>
  <% if review.errors.any? %>
    <%= content_tag :div, class: 'alert alert-danger', id: 'error_explanation' do %>
      <%= content_tag :h6 do %>
        <%= pluralize(review.errors.count, 'error') %> prohibited this  fromreview being saved:
      <% end %>
      <%= content_tag :ol do %>
        <% review.errors.full_messages.each do |message| %>
          <%= content_tag :li, message %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= content_tag :label, 'Book:' %>
    <%= collection_select :book, :book_id, Book.all, :id, :title, { prompt: true }, { class: 'form-control' } %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= content_tag :label, 'Review Body:' %>
    <%= form.text_area :body, id: :review_body, class: 'form-control' %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= form.submit 'Create Book', class: 'btn btn-outline-primary' %>
  <% end %>
<% end %>
