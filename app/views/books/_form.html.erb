<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= content_tag :label, 'Author:' %>
    <%= collection_select :author, :author_id, Author.all, :id, :display_name, { prompt: true }, { class: 'form-control' } %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= content_tag :label, 'Genre:'  %>
    <%= collection_select :genre, :genre_id, Genre.all, :id, :name, { prompt: true }, { class: 'form-control' } %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= content_tag :label, 'Title:'  %>
    <%= form.text_area :title, id: :book_title, class: 'form-control' %>
  <% end %>

  <%= content_tag :label, 'Published:'  %>
  <%= content_tag :div, class: 'form-group input-group date' do %>
    <%= form.text_field :published, id: :book_published, data: { provide: 'datepicker' }, class: 'form-control' %>
    <%= content_tag :div, class: 'input-group-append' do %>
      <%= content_tag :span, class: 'input-group-text' do %>
        <%= content_tag :i, nil, class: 'fa fa-calendar-o' %>
      <% end %>
    <% end %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= content_tag :label, 'Hours:'  %>
    <%= form.number_field :hours, id: :book_hours, class: 'form-control'  %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= content_tag :label, 'Pages:'  %>
    <%= form.number_field :pages, id: :book_pages, class: 'form-control'  %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= content_tag :label, 'Amazon Url:'  %>
    <%= form.number_field :amazon_url, id: :book_amazon_url, class: 'form-control'  %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= content_tag :label, 'Audible Url:'  %>
    <%= form.number_field :audible_url, id: :book_audible_url, class: 'form-control' %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= form.submit 'Create Book', class: 'btn btn-outline-primary' %>
  <% end %>
<% end %>
