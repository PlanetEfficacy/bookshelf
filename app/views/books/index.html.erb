<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Genre</th>
      <th>Title</th>
      <th>Published</th>
      <th>Hours</th>
      <th>Pages</th>
      <th>Amazon url</th>
      <th>Audible url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.title %></td>
        <td><%= book.published %></td>
        <td><%= book.hours %></td>
        <td><%= book.pages %></td>
        <td><%= book.amazon_url %></td>
        <td><%= book.audible_url %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

