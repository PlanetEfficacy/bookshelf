<%= form_with(model: genre, local: true) do |form| %>
  <% if genre.errors.any? %>
    <%= content_tag :div, class: 'alert alert-danger', id: 'error_explanation' do %>
      <%= content_tag :h6 do %>
        <%= pluralize(genre.errors.count, 'error') %> prohibited this genre from being saved:
      <% end %>
      <%= content_tag :ol do %>
        <% genre.errors.full_messages.each do |message| %>
          <%= content_tag :li, message %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= content_tag :label, 'Name:' %>
    <%= form.text_field :name, id: :genre_name, class: 'form-control' %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= form.check_box :fiction, id: :genre_fiction %>
    <%= content_tag :label, 'Fiction', class: 'form-check-label', for: 'genre_fiction' %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= form.submit 'Create Genre', class: 'btn btn-outline-primary' %>
  <% end %>
<% end %>
