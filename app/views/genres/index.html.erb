<%= content_tag :div, class: 'container' do %>
  <%= content_tag :h1, 'Genres', class: 'display-4' %>
  <%= content_tag :table, class: 'table table-striped table-hoverable' do %>
    <%= content_tag :thead do %>
      <%= content_tag :tr do %>
        <%= content_tag :th, scope: 'col' do %>
          Name
        <% end %>
        <%= content_tag :th, scope: 'col' do %>
          Fiction
        <% end %>
        <%= content_tag :th, scope: 'col' do %>
          Actions
        <% end %>
      <% end %>
    <% end %>
    <%= content_tag :tbody do %>
      <% @genres.each do |genre| %>
        <%= content_tag :tr do %>
          <%= content_tag :td do %>
            <%= genre.name %>
          <% end %>
          <%= content_tag :td do %>
            <%= genre.fiction %>
          <% end %>
          <%= content_tag :td do %>
            <%= link_to edit_genre_path(genre) do %>
              <%= fa_stacked_icon "edit", base: "square-o" %>
            <% end %>
            <%= link_to genre, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <%= fa_stacked_icon "trash", base: "square-o" %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
